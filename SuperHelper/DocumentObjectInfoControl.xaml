<UserControl x:Class="SuperHelper.DocumentObjectInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SuperHelper"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:ParamDatasConverter x:Key="ParamDatasConverter"/>
        <local:IsParamConverter x:Key="IsParamConverter"/>
        <local:IsComponentConverter x:Key="IsComponentConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <local:InstanceDescControl Grid.Row="0" DataContext="{Binding Mode=OneWay}"/>
        <local:ComponentInfoControl Grid.Row="1" DataContext="{Binding Mode=OneWay}"
                                    Visibility="{Binding Converter={StaticResource IsComponentConverter}, Mode=OneWay}"/>
        <local:ParamInfoControl Grid.Row="1" DataContext="{Binding Mode=OneWay}"
                                Visibility="{Binding Converter={StaticResource IsParamConverter}, Mode=OneWay}"/>
    </Grid>
</UserControl>
